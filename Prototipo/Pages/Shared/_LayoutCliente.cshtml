<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>@ViewData["Title"] - Prototipo</title>
    <link rel="stylesheet" href="~/libCliente/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <!-- <link rel="stylesheet" href="~/libCliente/font-awesome.min.css"> -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" media="screen" />

</head>


<body>
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0" style="background: linear-gradient(#2c3134, #2c3134);background-color: #2c3134;">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0" href="#">
                    <div class="sidebar-brand-text mx-3"><span>PROTOTIPO</span></div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="nav navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-page="/Cliente"><span>Inicio</span></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-page="/Consulta"><span>Consulta</span></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-page="/Transferencias"><span>Transferencias</span></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-page="/Pagos"><span>Pagos</span></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-page="/Fondos"><span>Fondo de Pensiones</span></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-page="/Inversion"><span>Inversiones</span></a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" asp-page="/Prestamos"><span>Prestamos</span></a></li>

                </ul>
                <div class="text-center d-none d-md-inline"><button class="btn rounded-circle border-0" id="sidebarToggle" type="button"></button></div>
            </div>
        </nav>

        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="container-fluid">
                        <button class="btn btn-link d-md-none rounded-circle mr-3" id="sidebarToggleTop" type="button"><i class="fa fa-bars"></i></button>
                        <ul class="nav navbar-nav flex-nowrap ml-auto">

                            <div class="d-none d-sm-block topbar-divider"></div>
                            <li class="nav-item dropdown no-arrow" role="presentation">
                                <div class="nav-item dropdown no-arrow">
                                    <a class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false" href="#"><span class="d-none d-lg-inline mr-2 text-gray-600 small">Nombre Usuario</span><img class="border rounded-circle img-profile" src="~/image/avatar.png"></a>
                                    <div class="dropdown-menu shadow dropdown-menu-right animated--grow-in" role="menu">
                                        <div class="dropdown-divider"></div><a class="dropdown-item" role="presentation" href="#">&nbsp;Salir</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>

                </nav>
                <div class="container-fluid">

                    @RenderBody()

                </div>
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Diseño Conceptual del Software</span></div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/libCliente/jquery.min.js"></script>
    <script src="~/libCliente/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"></script>
    <script src="~/libCliente/theme.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
